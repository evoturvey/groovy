#!/bin/sh

##############################################################################
##                                                                          ##
##  Groovy Console script for UN*X                                          ##
##                                                                          ##
##############################################################################

##
## $Id$
##

DIRNAME=`dirname "$0"`
. "$DIRNAME/startGroovy"

#
# HACK: Temporary support to run the current or new shells
#

if [ "x$NEWSHELL" != "x" ]; then
    startGroovy org.codehaus.groovy.tools.shell.Main "$@"
else
    startGroovy groovy.ui.InteractiveShell "$@"
fi

