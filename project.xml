  <dependencies>

    <dependency>
      <id>xerces</id>
      <version>2.4.0</version>
      <url>http://xml.apache.org/</url>
    </dependency>

    <dependency>
      <id>xml-apis</id>
      <version>1.0.b2</version>
      <url>http://xml.apache.org/</url>
    </dependency>

    <dependency>
      <id>commons-logging</id>
      <version>1.0.3</version>
      <url>http://jakarta.apache.org/commons/logging.html</url>
    </dependency>

    <dependency>
      <id>log4j</id>
