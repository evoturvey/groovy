  <dependencies>

    <!-- core dependencies -->
    <dependency>
      <id>asm</id>
      <version>1.4.1</version>
      <url>http://asm.objectweb.org/</url>
    </dependency>

    <!-- dependencies used by optional features -->
    <dependency>
      <id>xerces</id>
      <version>2.4.0</version>
      <url>http://xml.apache.org/</url>
    </dependency>

    <dependency>
      <id>xml-apis</id>
      <version>1.0.b2</version>
      <url>http://xml.apache.org/</url>
    </dependency>

    <!-- only used for command line tools -->
    <dependency>
      <id>classworlds</id>
      <version>1.0-rc2</version>
    </dependency>

    <dependency>
      <id>commons-cli</id>
      <version>1.0</version>
    </dependency>

    <!-- only used for Ant tasks & scripting tools -->
    <dependency>
      <id>ant</id>
      <version>1.5.2</version>
    </dependency>

    <!-- only used for testing helper classes -->
    <dependency>
      <id>junit</id>
      <version>3.8.1</version>
    </dependency>

    <!-- only used for testing/debugging-->
    <dependency>
      <id>asm+util</id>
      <version>1.4.1</version>
      <url>http://asm.objectweb.org/</url>
    </dependency>
    <dependency>
      <id>asm+attrs</id>
      <version>1.4.1</version>
      <url>http://asm.objectweb.org/</url>
    </dependency>

    <!-- only used for BSF adapter-->
    <dependency>
      <id>bsf</id>
      <version>2.3.0-rc1</version>
      <url>http://jakarta.apache.org/bsf/</url>
    </dependency>

  <!-- only used for JMX utilities -->
    <dependency>
      <id>mx4j</id>
      <version>2.0-beta-1</version>
      <properties>
          <bootstrap>true</bootstrap>
      </properties>
    </dependency>

  <!-- only used for GroovyMock tools -->
    <dependency>
      <id>mockobjects</id>
      <version>core-0.09</version>
    </dependency>

  <!-- only used for EJB browser -->
    <dependency>
      <id>openejb</id>
      <artifactId>openejb-loader</artifactId>
      <version>0.9.2</version>
    </dependency>

  <!-- only used for SQL library -->
    <dependency>
      <id>axion</id>
      <version>1.0-M3-dev</version>
    </dependency>
    <dependency>
      <id>commons-logging</id>
      <version>1.0.3</version>
      <url>http://jakarta.apache.org/commons/logging.html</url>
    </dependency>
    <dependency>
      <id>commons-collections</id>
      <version>3.0-dev2</version>
      <url>http://jakarta.apache.org/commons/collections</url>
    </dependency>
    <dependency>
      <id>regexp</id>
      <version>1.2</version>
    </dependency>
  
  <!-- only used for servlet / gsp -->
    <dependency>
      <id>servletapi</id>
      <version>2.3</version>
    </dependency>
  
  <!-- only used for the Wiki Ant tasks -->
    <dependency>
      <id>radeox</id>
      <version>0.9</version>
    </dependency>
    <dependency>
      <id>radeox+oro</id>
      <version>0.9</version>
    </dependency>
  <!-- only used for the HTML to Wiki script -->
    <dependency>
      <id>nekohtml</id>
      <version>0.7.7</version>
    </dependency>
  <!-- only used for the JavaDoc generator script -->
    <dependency>
      <id>qdox</id>
      <version>1.3</version>
    </dependency>
  
  </dependencies>

  <build>
    <nagEmailAddress>groovy-scm@lists.codehaus.org</nagEmailAddress>
    <sourceDirectory>src/main</sourceDirectory>
    <unitTestSourceDirectory>src/test</unitTestSourceDirectory>
    <aspectSourceDirectory/>

    <unitTest>
      <resources>
        <resource>
          <directory>src/test</directory>
          <includes>
            <include>**/*.properties</include>
            <include>**/*.xml</include>
            <include>**/*.xsd</include>
          </includes>
        </resource>
      </resources>

      <includes>
        <include>**/*Test.*</include>
        <include>**/*Bug.*</include>
      </includes>

    </unitTest>

    <resources>
      <resource>
        <directory>src/main</directory>
        <includes>
          <include>**/*.properties</include>
          <include>**/*.xml</include>
        </includes>
      </resource>
    </resources>

  </build>
  
   
